{
  "name": "@txo/offline-redux",
  "version": "1.2.1",
  "description": "Technology Studio - Offline redux",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/technology-studio/offline-redux.git"
  },
  "author": {
    "name": "Technology Studio",
    "email": "npm@technologystudio.sk",
    "url": "https://github.com/technology-studio/"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest",
    "clean": "rm -rf $TMPDIR/react-* && watchman watch-del-all && npm cache clean --force",
    "newclear": "rm -rf $TMPDIR/react-* && watchman watch-del-all && rm -rf ios/build && rm -rf node_modules/ && npm cache clean --force && npm i",
    "test:watch": "jest --watch",
    "updateSnapshot": "jest --updateSnapshot",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html",
    "lintdiff": "git diff --name-only --cached --relative | grep '\\.js$' | eslint --cache --format=node_modules/eslint-formatter-pretty",
    "lint": "eslint --format=node_modules/eslint-formatter-pretty .",
    "fixcode": "eslint --format=node_modules/eslint-formatter-pretty . --fix",
    "git-hook": "yarn -s lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run git-hook",
      "pre-push": "yarn run git-hook"
    }
  },
  "dependencies": {
    "@txo/redux": "^3.0.1",
    "immutability-helper": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@txo-peer-dep/log": "^1.0.1",
    "@txo/babel-preset": "^1.0.0",
    "@txo/glow": "^1.2.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^6.7.2",
    "eslint-config-txo-react": "^3.0.0",
    "eslint-formatter-pretty": "^3.0.1",
    "eslint-plugin-flowtype": "^4.5.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "flow-bin": "^0.113.0",
    "flow-typed": "^2.6.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/__tests__/**/*.js",
      "**/?(*.)(spec|test).js?(x)"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!@txo).+\\.js$"
    ],
    "modulePathIgnorePatterns": [
      "lib"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/__tests__/Setup.js"
    ],
    "setupFiles": [
      "<rootDir>/__tests__/Setup"
    ]
  }
}
